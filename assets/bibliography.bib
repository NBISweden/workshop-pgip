@misc{rodrigues_SharedEvolutionaryProcesses_2023,
  title = {Shared Evolutionary Processes Shape Landscapes of Genomic Variation in the Great Apes},
  author = {Rodrigues, Murillo F. and Kern, Andrew D. and Ralph, Peter L.},
  year = {2023},
  month = jun,
  primaryclass = {New Results},
  pages = {2023.02.07.527547},
  publisher = {{bioRxiv}},
  doi = {10.1101/2023.02.07.527547},
  urldate = {2023-09-01},
  abstract = {For the past six decades population genetics, as a field, has faced challenges in trying to explain the precise balance of forces that shape patterns of variation in genomes. These challenges arise from difficulties in modelling the interactions between evolutionary processes and the similar ways different processes can impact genetic variation. Here, we describe how diversity and divergence between closely related species change with time, using correlations between landscapes of genetic variation as a tool to understand the interplay between evolutionary processes. We find strong correlations between landscapes of diversity and divergence in a well sampled set of great ape genomes. Through highly realistic, chromosome-scale, forward-in-time simulations we show that the observed great ape landscapes of diversity and divergence are too well correlated to be explained via strictly neutral processes alone. We describe how various processes such as incomplete lineage sorting, mutation rate variation, GCbiased gene conversion and selection could contribute to correlations. Our best fitting simulation includes both deleterious and beneficial mutations in functional portions of the genome, in which 10\% of fixations within those regions is driven by positive selection. Our results demonstrate that correlations between landscapes of genomic variation among closely related species can shed light on the complex balance of forces that have shaped genetic variation.},
