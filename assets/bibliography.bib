  author = {Laurie, Cathy C. and Nickerson, Deborah A. and Anderson, Amy D. and Weir, Bruce S. and Livingston, Robert J. and Dean, Matthew D. and Smith, Kimberly L. and Schadt, Eric E. and Nachman, Michael W.},
